{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite", "node", "vite/client"],
    "jsx": "react"
  }
}
